{ 
    "compilerOptions": {
      "target": "ES6",                          
      "module": "commonjs",                     
      "strict": true,                           
      "esModuleInterop": true,                 
      "skipLibCheck": true,                     
      "forceConsistentCasingInFileNames": true, 
      "outDir": "./dist",                       
      "rootDir": "./src",     
      "moduleResolution": "node",
      "resolveJsonModule": true,                
      "typeRoots": ["./node_modules/@types", "types/global.d.ts"],   
      "lib": ["ES6"],                           
      "sourceMap": true
    },
    "include": ["**/*.ts", "types/global.d.ts"],
    "exclude": ["node_modules", "dist"],
} 
